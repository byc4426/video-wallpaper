<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dingmouren.sample.MainActivity">
   <TextView
       android:layout_width="match_parent"
       android:layout_height="?actionBarSize"
       android:text="VideoWallpaper"
       android:gravity="center"
       android:textColor="#edf50b"
       android:textSize="25sp"
       android:background="@android:color/black"
       android:textStyle="bold"
       />

   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="设置壁纸"
       android:textSize="30sp"
       android:textStyle="bold"
       android:onClick="setWallpaper"
       />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:padding="5dp"
       >
      <Button
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:paddingRight="5dp"
          android:text="设置静音"
          android:textSize="25sp"
          android:onClick="setSilence"
          />
      <Button
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:paddingLeft="5dp"
          android:textSize="25sp"
          android:text="取消静音"
          android:onClick="cancelSilence"
          />

   </LinearLayout>
   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/xx"
       android:text="退出"
       android:textSize="25sp"
       android:padding="5dp"
       android:onClick="toBack"
       />
</LinearLayout>
